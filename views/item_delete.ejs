<h1><%=title%>: <%=item.name%></h1>
<% if (bundle_list.length) { %>
<p>
	<strong
		>Delete the following bundles before attempting to delete this
		item.</strong
	>
</p>
<div>
	<hr />
	<h3>Bundles:</h3>
	<ul>
		<% bundle_list.forEach(bundle => { %>
		<li><a href="<%=bundle.url%>"> <%=bundle.name%> </a></li>
		<% }) %>
	</ul>
</div>
<% } else { %>
<p>Do you really want to delete this item?</p>

<form
	action=""
	method="POST"
>
	<label for="item">
		<input
			type="hidden"
			name="item"
			value="<%=item.name%>"
			id="item"
			required
		/>
	</label>
	<button type="submit">Delete</button>
</form>
<%}%>
